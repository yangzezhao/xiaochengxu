.contanier {
  background-color: #f2f4f5;
  min-height: 100vh;
}
.card1 {
  display: flex;
  flex-direction: column;
  background-color: white;
  padding: 30rpx;
  border-radius: 16rpx;
  width: 690rpx;
  margin: 0 auto;
}
.card1 .name {
  font-weight: bold;
  font-size: 32rpx;
}
.info {
  margin-top: 22rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #F2F2F2;
}
.info image {
  width: 114rpx;
  height: 114rpx;
}
.info .mation {
  line-height: 40rpx;
  margin-left: 32rpx;
  width: 416rpx;
  font-size: 24rpx;
  height: 80rpx;
}
.tel {
  padding: 27rpx 30rpx;
  padding-left: 0;
  font-size: 24rpx;
  color: #333333;
  border-bottom: 1px solid #F2F2F2;
}
.tel .time {
  color: #999999;
}
.tel button {
  width: 145rpx;
  font-size: 24rpx;
  height: 60rpx;
  margin-right: 17rpx;
  background-color: #3FABFF;
}

